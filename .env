# PetPal Environment Configuration Example
# Copy this file to .env and update the values

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB Atlas Connection String
MONGO_URI=mongodb+srv://acsujan69:petpal123@petpal.9k6d9qu.mongodb.net/petpal

# Individual database URIs (optional - will use MONGO_URI with different DB names if not set)
MONGO_URI_USERS=mongodb+srv://acsujan69:petpal123@petpal.9k6d9qu.mongodb.net/petpal_users
MONGO_URI_PETS=mongodb+srv://acsujan69:petpal123@petpal.9k6d9qu.mongodb.net/petpal_pets
MONGO_URI_APPOINTMENTS=mongodb+srv://acsujan69:petpal123@petpal.9k6d9qu.mongodb.net/petpal_appointments
MONGO_URI_MEDICAL=mongodb+srv://acsujan69:petpal123@petpal.9k6d9qu.mongodb.net/petpal_medical

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please

# Service-to-Service Communication Secret
SERVICE_SECRET=shared-service-secret-change-in-production

# Frontend Session Secret
SECRET_KEY=frontend-session-secret-key-change-in-production

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
FLASK_ENV=development
FLASK_DEBUG=1

# Application Host and Port
HOST=0.0.0.0
PORT=5000

# =============================================================================
# Service URLs (for inter-service communication)
# =============================================================================

# User Service
USER_SERVICE_URL=http://localhost:5001

# Pet Service
PET_SERVICE_URL=http://localhost:5002

# Appointment Service
APPOINTMENT_SERVICE_URL=http://localhost:5003

# Medical Service
MEDICAL_SERVICE_URL=http://localhost:5004

# Frontend Service
FRONTEND_URL=http://localhost:5000

# =============================================================================
# External Services Configuration
# =============================================================================

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# File Upload Service (AWS S3, MinIO, etc.)
UPLOAD_SERVICE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=petpal-uploads

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Performance and Scaling
# =============================================================================

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true

# =============================================================================
# Development and Testing
# =============================================================================

# Test Database (for running tests)
TEST_MONGO_URI=mongodb://localhost:27017/petpal_test

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false

# API Documentation
ENABLE_SWAGGER=true
API_DOCS_URL=/docs

# =============================================================================
# Deployment Configuration
# =============================================================================

# Container Configuration
WORKERS=4
WORKER_TIMEOUT=120
WORKER_CLASS=sync

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Third-Party Integrations
# =============================================================================

# Google Cloud Configuration (if using GCP)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Configuration (if using Azure)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# Stripe Configuration (for payments, if applicable)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# =============================================================================
# Notification Services
# =============================================================================

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3://your-backup-bucket

# =============================================================================
# Security and Compliance
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOW_CREDENTIALS=true

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# =============================================================================
# Analytics and Tracking
# =============================================================================

# Google Analytics
GA_TRACKING_ID=UA-your-tracking-id

# Application Insights (if using Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key

# =============================================================================
# Kubernetes and Docker Configuration
# =============================================================================

# Kubernetes Namespace
K8S_NAMESPACE=petpal

# Container Registry
CONTAINER_REGISTRY=ghcr.io/your-username/petpal

# Image Tags
IMAGE_TAG=latest

# =============================================================================
# CI/CD Configuration
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your-github-token

# Docker Hub
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# =============================================================================
# Local Development Overrides
# =============================================================================

# Override any of the above settings for local development
# These won't be committed to version control

# Example: Use local MongoDB for development
# MONGO_URI=mongodb://localhost:27017/petpal_dev

# Example: Disable external services for local development
# ENABLE_EMAIL_VERIFICATION=false
# ENABLE_NOTIFICATIONS=false